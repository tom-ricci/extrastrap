{
  "name": "extrastrap",
  "version": "1.0.0",
  "description": "Bootstrap-like utility classes made to extend your Bootstrap usage.",
  "main": "index.css",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run transpile && npm run minify && npm run clean",
    "prepare": "rm -rf temp && rmdir -rf dist",
    "transpile": "sass src/main.scss temp/main.css",
    "minify": "minify temp/main.css > dist/main.css",
    "clean": "rm -rf temp"
  },
  "keywords": [
    "bootstrap",
    "extrastrap",
    "utility",
    "classes",
    "css"
  ],
  "author": "Thomas Ricci",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.1.0",
    "minify": "^7.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tom-ricci/extrastrap.git"
  },
  "bugs": {
    "url": "https://github.com/tom-ricci/extrastrap/issues"
  },
  "homepage": "https://github.com/tom-ricci/extrastrap#readme"
}
